package com.maria.rajeev;

public class Kata {
	
	public static void main(String args[]){
		int a[]={1,2,3,4,3,2,1,5,6,2,2,3,3};
        System.out.println(findEvenIndex(a));    	     
	}
	  public static int findEvenIndex(int[] arr) {
		  int sum1=0,sum2=0,sum3=0,ret=0,rig,sum4=0;
		    
		    	sum1=arr[0]+arr[1];
		    	//skip 3rd element
		    	sum2=arr[3]+arr[4];
		    	if(sum1==sum3)
		    		ret=arr[2];
		    	else if(sum1<sum2)
		    	{
		    	for(int i=2;i<=arr.length;i++)
			    {
		    	if(sum4<=arr.length)
		    	{
		    	sum1=sum1+arr[i];
		    	//skip 4th element
		    	sum4=arr[i+4];
		    	sum2=sum2-arr[i+1]+arr[i+3];
		    	if(sum1==sum2){
		    		ret=arr[i+1];
		    	    break;}
		    	else if(sum1>sum2){
		    		sum2=sum2+arr[i+4];
		    	if(sum1==sum2)
		    		ret=arr[i+1];
		    	    break;
		    	}
		    	}
		    	}
		    }
			return ret;
	  }
}
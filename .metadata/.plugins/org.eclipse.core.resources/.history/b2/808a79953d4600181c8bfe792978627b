package com.maria.rajeev;

public class Kata {
	
	public static void main(String args[]){
		int a[]={1,2,3,4,3,2,1};
        System.out.println(findEvenIndex(a));    	     
	}
	  public static int findEvenIndex(int[] arr) {
		  int sum=0,sum1=0,sum2=0,sum3=0,ret=0,rig_sum,sum4=0;
//		    for(int i=0;i<arr.length+1;i++)
//		    {
		    	sum=arr[0]+sum;
		    	sum1=arr[1]+sum;
		    	//skip 3rd element
		    	sum2=arr[3]+sum2;
		    	sum3=arr[4]+sum2;
		    	if(sum1==sum3)
		    		ret=arr[2];
		    	else if(sum1<sum2)
		    	{
		    	sum1=sum1+arr[3];
		    	sum4=arr[5]+arr[6];
		    	if(sum1==sum4)
		    		ret=arr[3];
		    	else if(sum1>sum4){
		    		sum4=arr[4]+arr[5]+arr[6];
		    	if(sum1==sum4)
		    		ret=arr[3];
		    	}
		    	}
//		    }
			return ret;
	  }
}
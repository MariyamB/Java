package com.maria.rajeev;

public class DRoot {
	public static void main(String args[]){
	      System.out.println(digital_root(16));
	}
	 public static int digital_root(int n) {
		    int c=0;
		    while(n!=0){
		    n=n%10;
		    int b=n/10;
		    c=c+n;
		    n=b;}
		    return c;
		    }
		 }


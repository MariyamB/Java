package com.maria.rajeev;

import java.util.Arrays;

public class JadenCase {
	public static void main(String[] args)
	{
		
		String phrase1="most trees are blue";
		System.out.println(toJadenCase(phrase1));
	}

	public static String toJadenCase(String phrase) {
		String str=" ";
		String str1=" ";
		str=phrase.substring(0,2).toUpperCase();
		for (int i = 2; i < phrase.length(); i++) {
	        if (phrase.charAt(i) < ' ' &&phrase.charAt(i) > ' ' ) {
	        	str1=phrase.substring(i,i+1).toUpperCase();
	        	str1=phrase.substring(i+1,' ').toLowerCase();
	        	str=str+str1;
	        	}
//	        else
//	        {
//	        	str1=phrase;}
	        
//	        	str=str+str1;
	        }
		return str;
	}
		
	}


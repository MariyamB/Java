package com.maria.rajeev;

public class Kata {
	
	public static void main(String args[]){
		int a[]={1,2,3,4,3,2,1};
        System.out.println(findEvenIndex(a));    	     
	}
	  public static int findEvenIndex(int[] arr) {
		  int sum=0,sum1=0,sum2=0,sum3=0,ret=0,rig_sum,sum4=0;
		    for(int i=1;i<arr.length;i++)
		    {
		    	sum=arr[i]+sum;
		    	sum1=arr[i+1]+sum;
		    	//skip 3rd element
		    	sum2=arr[i+2]+sum2;
		    	sum3=arr[i+3]+sum2;
		    	if(sum1==sum3)
		    		ret=arr[i+1];
		    	else if(sum1<sum2)
		    	{
		    	sum1=sum1+arr[i+2];
		    	sum4=arr[i+4]+arr[i+5];
		    	if(sum1==sum4)
		    		ret=arr[i+3];
		    	else if(sum1>sum4){
		    		sum4=arr[i+4]+arr[i+5]+arr[i+6];
		    	if(sum1==sum4)
		    		ret=arr[i+3];
		    	}
		    	}
		    }
			return ret;
	  }
}
package com.maria.rajeev;

import java.util.Arrays;

public class JadenCase {
	public static void main(String[] args)
	{
		
		String phrase1="most trees are blue";
		System.out.println(toJadenCase(phrase1));
	}

	public static String toJadenCase(String phrase) {
		String[] result = phrase.split("\\s");
		String str=" ";
		String str1=" ";
		String newstr=" ";
		System.out.print(result);
for(int i=0;i< result.length;i++)
{
	str=Arrays.toString(result).substring(0,2).toUpperCase();
	for(int j=0;j<result[i].length();j++)
	{
	str1=Arrays.toString(result).substring(i,j);
	newstr=str+str1;
	}
}

		return newstr.toString();
	}

}
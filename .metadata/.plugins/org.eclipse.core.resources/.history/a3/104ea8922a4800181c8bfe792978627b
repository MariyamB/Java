package com.maria.rajeev;

import java.util.Arrays;

public class JadenCase {
	public static void main(String[] args)
	{
		
		String phrase1="most trees are blue";
		System.out.println(toJadenCase(phrase1));
	}

	public static String toJadenCase(String phrase) {
		String[] str = phrase.toLowerCase().split(" ");
		String output=" ";
		for(int i = 0; i < str.length; i++){
			 output = Arrays.toString(str).substring(0, 2).toUpperCase()  + Arrays.toString(str).substring(2);
		}

		return output;
	}

}
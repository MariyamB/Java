package com.maria.rajeev;

public class Kata {
	
	public static void main(String args[]){
		int a[]={1,2,3,4,3,2,1};
        System.out.println(findEvenIndex(a));    	     
	}
	  public static int findEvenIndex(int[] arr) {
		  int sum1=0,sum2=0,sum3=0,ret=0,rig,sum4=0;
		    
		    	sum1=arr[0]+arr[1];
		    	//skip 3rd element
		    	sum2=arr[3]+arr[4];
		    	if(sum1==sum2)
		    		ret=arr[2];
		    	else if(sum1<sum2)
		    	{
		    	sum1=sum1+arr[2];
		    	//skip 4th element
		    	if(sum1==sum2){
		    		ret=arr[3];}
		    	else if(sum1>sum2){
		    		sum2=sum2+arr[5]-arr[3];
		    	if(sum1==sum2)
		    		ret=arr[3];
		    	}
		    	}
			return ret;
	  }
}